<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/mm"
    android:orientation="vertical"
    android:gravity="center">


    <TextView
        android:text="내 코드"
        style="@style/code_here"
        />

    <TextView
         style="@style/mycode"
        android:id="@+id/my_couple_code"
        android:text="avefdsv"
        />


    <Button
        style="@style/ww"
        android:id="@+id/copy_button"
        android:tooltipText="연인의 폰에 입력하세요"
        android:text="코드 복사하기"
        />


    <EditText
        style="@style/couple_code"
        android:id="@+id/other_couple_code"
        android:tooltipText="연인의 코드를 입력하세요"
        android:hint="연인의 코드 입력"
    />

    
    <Button
        android:id="@+id/connect"
        style="@style/ww"
        android:text="연결"
        />

</LinearLayout>